<% content_for(:title, "Raise Prep") %>
<%= link_to 'New Accomplishment', new_accomplishment_path, class: button_class('primary float-right') %>

<h1>Raise Prep</h1>

<% Category.all.each do |category| %>
  <h3><%= category.name %></h3>

  <% category.accomplishments.in_last_calendar_year.for_merit_and_praise.each do |accomplishment| %>
    <%= render partial: 'accomplishments/accomplishment', locals: { accomplishment: accomplishment } %>
  <% end %>
<% end %>

<%#= will_paginate @accomplishments, :page_links => false %>
