<%= form_tag(destination_url, method: 'get', id: 'filter-form' ) do %>
  <div class='row'>
    <div class='col-12 col-md-6 mb-2'>
      <%= text_field_tag :text, params[:text],
                                  placeholder: "Search Entries",
                                  class: 'form-control'
      %>
    </div>

    <div class='col-12 col-md-2 mb-2'>
      <%= label_tag :bookmarked %>
      <%= check_box_tag :bookmarked %>
    </div>

    <div class='col-12 col-md-2 mb-2'>
      <%= select_tag :year,
        options_for_select(timeframes_dropdown, params[:year]),
        class: 'form-control'
      %>
    </div>

    <div class='col-12 col-md-2'>
      <button type='submit' class='btn btn-outline-primary' style="width: 100%;">Submit</button>
      <%= link_to 'Reset', destination_url, class: 'ml-3' %>
    </div>
  </div> <!-- row -->
<% end %>
<hr>
